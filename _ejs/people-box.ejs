<div class="people-grid">
  <% for (const item of items) { ;%>

    <a class="people-card" href="<%- item.path %>">
      <div class="people-card__media">
        <img
          alt="<%= item.title %>"
          src="<%= item.image %>"
          class="people-card__img"
          loading="lazy"
        >
      </div>

      <div class="people-card__body">
        <div class="people-card__name"><%= item.title %></div>

        <% if (item.subtitle) { %>
          <div class="people-card__subtitle"><%= item.subtitle %></div>
        <% } %>


        <div class="people-card__cta">
          <span>View profile</span>
